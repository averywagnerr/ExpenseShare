        <label class="black-text" for="share">Percent that you pay of the expense:</label>
        <input type="number" name="share" id="share" /><br/>
    </form>

    <button id="calculate_button" type="submit" class="black-text" onclick="myFunction()">
        Calculate
    </button>
    <div id="calculate_button_result">
     <br> Amount of the expense you would pay: <br>
     $
    </div>

    <script>
      function myFunction() {
        const expense = document.getElementById('expense').value;
        const percent = document.getElementById('share').value;
        const percent_new = percent/100;
        const expense_new = percent_new * expense;
        //return expense;
        document.getElementById('calculate_button_result').innerHTML += expense_new;
       }
    </script>
</div>
