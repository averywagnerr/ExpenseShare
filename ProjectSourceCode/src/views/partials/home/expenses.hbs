<div class = "box">
  <h2 class="black-text box-titles">Expenses</h2>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>To/From</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
	{{#each transactions}}
		<tr>
			{{#if (isEqual ../username receiver)}}
				<td class="text-green-500 font-bold">+{{ amount }}</td>
				<td>{{ sender }}</td>
			{{else}}
				<td class="text-red-500 font-bold">-{{ amount }}</td>
				<td>{{ receiver }}</td>
			{{/if}}
			<td>{{ formatDate date }}</td>
		</tr>
	{{/each}}
  </tbody>
  </table>
</div>
