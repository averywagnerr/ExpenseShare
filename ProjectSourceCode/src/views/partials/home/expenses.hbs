 <div class = "box">
        <label class="black-text box-titles"> Expense History </label>

        <div class="table-responsive">
          <table class="table table-light">
            <thead>
              <tr>
                <th>Amount</th>
				<th>To/From</th>
				<th>Description</th>
				<th>Date</th>
              </tr>
            </thead>
            	<tbody>
					{{#each transactions}}
					<tr class="p-6 border-black border-b py-8">
						{{#if (isEqual ../username receiver)}}
							<td class="text-green-500 font-bold table-success">+{{ amount }}</td>
							<td>{{ sender }}</td>
						{{else}}
							<td class="text-red-500 font-bold table-danger">-{{ amount }}</td>
							<td>{{ receiver }}</td>
						{{/if}}
						<td class="max-w-96 break-words line-clamp-none">{{ description }}</td>
						<td>{{ formatDate date }}</td>
					</tr>
					{{/each}}
				</tbody>
            </table>
        </div>

